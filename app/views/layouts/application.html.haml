!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "author"}/
    %link{:href => "../../favicon.ico", :rel => "icon"}/
    %title #Luv.
    / Latest compiled and minified CSS
    %link{:href => "https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css", :rel => "stylesheet"}/
    / Optional theme
    %link{:href => "https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css", :rel => "stylesheet"}/
    / Placed at the end of the document so the pages load faster
    %script{:src => "https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"}
    / Latest compiled and minified JavaScript
    %script{:src => "https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"}
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
    / Custom styles for this template
    / HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries
    /[if lt IE 9]
      %script{:src=> "https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"}
      %script{:src=>"https://oss.maxcdn.com/respond/1.4.2/respond.min.js"}
  %body
    .container
      .starter-template
        %h1 Love Unconditionally Veraciously Period
        .divider
        %h1.huge #Luv.
    .tagline
      %p.lead a work in progress
      %p #dreamer #bebold #almostthere
    .formbox.col-md-6.col-md-offset-3
      = form_tag email_path, :method => :get do
        .row
          .col-xs-12
            .input-group.input-group-lg
              = text_field_tag :email, params[:search], :placeholder => "Enter email and we will notify you on launch", :class => "form-control"
              .input-group-btn
                %button.btn.btn-black{:type => "submit"} submit

    .row
      .col-md-6.col-md-offset-3.social
        .col-md-4.fb
        .col-md-4.twitter
        .col-md-4.mail